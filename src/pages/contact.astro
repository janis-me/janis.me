---
import { Picture } from "astro:assets";

import Layout from "$layouts/Layout.astro";

import mailImage from "../assets/mail.png"; // Image is 1600x900
---

<Layout>
  <div class="contact">
    <h2>Contact</h2>
    <div class="contact__text">
      <p>
        You can reach me via:
        <Picture
          src={mailImage}
          alt="My email. Sorry, only an image. You can reach out to me on linkedin if you need to."
        />
        or send me a message on linkedin.
      </p>
    </div>
    <div class="contact__pages">
      <a href="/imprint">Imprint</a>
      <p>Contact</p>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "$styles/mixins" as mixins;

  .contact {
    @include mixins.contentContainer;

    h2 {
      margin: 0 0 0 8px;
    }

    &__text {
      padding: 8px;
      border-top: 1px solid c("grey-3");
    }

    &__pages {
      display: flex;
      justify-content: space-evenly;
      border-top: 1px solid c("grey-3");

      padding: 8px;

      p {
        margin: 0;
      }
    }
  }
</style>
