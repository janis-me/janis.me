<style lang="scss">
  @use '$styles/globals' as *;

  .cv {
    display: grid;
    grid-template-areas: 'title title' 'subtitle subtitle' 'intro intro' 'education experience' 'random other' 'outro outro';
    grid-template-rows: min-content min-content min-content min-content min-content min-content;
    grid-template-columns: 2fr 3fr;
    width: 100%;
    height: 100%;
    color: themed('text');
    border-collapse: collapse;

    .section {
      background-color: themed('background');
      border-top: 1px solid themed('gray-8');
      border-collapse: collapse;
    }

    .section-title {
      font-weight: bold;
      border-bottom: 1px dashed themed('gray-9');
      height: themed('size-32');
      display: flex;
      align-items: center;
      padding: 0 themed('size-16');
    }

    .section-content {
      padding: themed('size-8') themed('size-16');
    }

    img {
      display: block;
      max-width: 80%;
      width: auto;
      height: auto;
    }

    ul {
      margin: 0;
    }

    p,
    h2 {
      margin: 0;
    }

    .title {
      grid-area: title;
      padding: themed('size-8') themed('size-16');
      border-top: none;
    }

    .subtitle {
      grid-area: subtitle;
      width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      padding: themed('size-8') themed('size-16');
    }

    .intro {
      grid-area: intro;
    }

    .education {
      grid-area: education;
      border-right: 1px solid themed('gray-8');
    }

    .experience {
      grid-area: experience;

      @media print {
        break-after: page;
      }
    }

    .random {
      grid-area: random;
      border-right: 1px solid themed('gray-8');

      @media print {
        margin-top: themed('size-16');
      }
    }

    .other {
      grid-area: other;

      @media print {
        margin-top: themed('size-16');
      }
    }

    .outro {
      grid-area: outro;
    }

    @include media('<=tablet') {
      grid-template-areas: 'title' 'subtitle' 'intro' 'education' 'experience' 'other' 'random' 'outro';
      grid-template-columns: 1fr;

      .education,
      .random {
        border-right: none;
      }
    }
  }
</style>
